{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true
  },
  "compileOnSave": true,
  "exclude": ["src/**/*.spec.ts"],
  "include": ["src/**/*.ts"]
}
