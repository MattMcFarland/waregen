{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "noUnusedLocals": false,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "@@/*": ["src/lib/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts"]
}
